{
  "extends": "@saasfly/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "contentlayer/generated": ["./.contentlayer/generated"],
      "@saasfly/ui": ["../../packages/ui/src"],
      "@saasfly/ui/*": ["../../packages/ui/src/*"],
      "@saasfly/api": ["../../packages/api/src"],
      "@saasfly/auth": ["../../packages/auth/src"],
      "@saasfly/db": ["../../packages/db/src"],
      "@saasfly/stripe": ["../../packages/stripe/src"],
      "@saasfly/common": ["../../packages/common/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "*.ts",
    "*.tsx",
    "*.mjs",
    "src",
    "contentlayer.config.ts"
  ],
  "exclude": ["node_modules"]
}
